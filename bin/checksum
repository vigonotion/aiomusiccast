#!/usr/bin/env python

import hashlib
import sys


def run(paths):
    sha = hashlib.sha1()

    for path in paths:
        try:
            with open(path, "rb") as f:
                for chunk in iter(lambda: f.read(4096), b""):
                    sha.update(chunk)
        except OSError:
            sha.update(path.encode())

    print(sha.hexdigest())


if __name__ == "__main__":
    run(sys.argv[1:])
